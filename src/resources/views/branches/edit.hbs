<div class="mt-4"></div>
    <h3>Cập nhật chi nhánh</h3>
    <form class="mt-4 container" method="POST" action="/branches/{{branch._id}}?_method=PUT">
        <div class='mb-3'>
            <label for='name'>Tên chi nhánh</label>
            <input type='text' class='form-control' id='name' name='name' value='{{branch.name}}' />
        </div>
        <div class='mb-3'>
            <label for='description'>Mô tả</label>
            <textarea name="description" id="description" class="form-control">{{branch.description}}</textarea>
        </div>
        <div class='mb-3'>
            <label for='name'>Link hình ảnh</label>
            <input type='text' class='form-control' id='image' name='image' value='{{branch.image}}' />
        </div>
        <button type='submit' class='btn btn-primary'>Cập nhật</button>
    </form>
</div>