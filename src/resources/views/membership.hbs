<div class='container'>
    <div class='text-center my-5'>
        <h1 class='font-weight-bold'>Đăng ký thành viên</h1>
    </div>
    <form method='POST' action='/membership/create' class='form-booking mx-auto overflow-hidden px-0 my-5'>
        <div class='d-flex flex-column align-items-center'>
            <div class='form-booking-item col-lg-6 px-0 overflow-hidden'>
                <div class='form-header text-white py-3 px-4'>
                    <h2>Thông tin cá nhân</h2>
                </div>
                <div class='form-body px-4 my-4'>
                    <div class='form-row'>
                        <div class='form-group col-lg'>
                            <label for=''>SỐ ĐIỆN THOẠI</label>
                            <input type='text' class='form-control' id='phone' name='phone' required />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class='form-group col-lg'>
                            <label for=''>HỌ VÀ TÊN</label>
                            <input type='text' class='form-control' id='name' name='name' required />
                        </div>
                    </div>
                    <div class='form-row'>
                        <div class='form-group col-lg'>
                            <label for=''>EMAIL</label>
                            <input type='email' class='form-control' id='email' name='email' required />
                        </div>
                    </div>
                    <div class='form-row'>
                        <div class='form-group col-lg-6'>
                            <label for=''>NGÀY SINH</label>
                            <input type='date' class='form-control' id='birthday' name='birthday' required />
                        </div>
                        <div class='form-group col-lg-6'>
                            <label for=''>GIỚI TÍNH</label>
                            <select id='gender' name='gender' class='form-control' required>
                                <option selected>Chọn giới tính</option>
                                <option>Nam</option>
                                <option>Nữ</option>
                                <option>Khác</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class='d-flex justify-content-center'>
            <button type='submit' class='btn btn-primary rounded-pill p-4'>Đăng ký thành viên</button>
        </div>
    </form>
</div>

<style>
    .form-booking-item { border: 2px solid #936a4e; border-radius: 1rem; margin-bottom: 4rem;} .form-header {
    background-color: #936a4e;} input, textarea, select { background-color: #FFF5EB !important; border-color: #f9e4cd
    !important; border-bottom: 1px solid #936a4e !important;} .form-row {padding-bottom: 1rem;}
</style>